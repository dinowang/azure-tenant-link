{
    "name": "Azure Tenant Link",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "app/background.js"
    },
    "options_page": "app/links.html",
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://portal.azure.com/*",
        "https://*.portal.azure.com/*"
    ],
    "action": {
        "default_title": "Azure Tenant Link",
        "default_popup": "app/links.html",
        "default_icon": {
            "16": "images/icon.svg",
            "24": "images/icon.svg",
            "32": "images/icon.svg"
        }
    },
    "icons": {
        "16": "images/icon.svg",
        "24": "images/icon.svg",
        "32": "images/icon.svg"
    }
}