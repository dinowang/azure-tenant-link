{
    "name": "Azure Tenant Link",
    "version": "0.2",
    "manifest_version": 3,
    "background": {
        "service_worker": "app/background.js"
    },
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://portal.azure.com/*",
        "https://*.portal.azure.com/*"
    ],
    "action": {
        "default_title": "Azure Tenant Link",
        "default_popup": "app/links.html",
        "default_icon": {
            "16": "images/16.png",
            "24": "images/24.png",
            "32": "images/32.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "24": "images/24.png",
        "32": "images/32.png"
    }
}